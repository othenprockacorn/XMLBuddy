<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TableView?>


<?import javafx.scene.control.TextField?>
<GridPane fx:controller="com.acorn.xmlsnap.controller.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" >

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="100.0" prefWidth="90.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="100.0" prefWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0"  percentHeight="5.0" vgrow="NEVER" />
        <RowConstraints minHeight="30.0"  percentHeight="5.0" vgrow="NEVER" />
        <RowConstraints minHeight="30.0"  percentHeight="85.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0"  percentHeight="5.0"  vgrow="NEVER" />

    </rowConstraints>


    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <TextField fx:id="tfMainNode"  promptText="Enter the root node (container node)"  minWidth="300.0"/>
        <Button fx:id="butXmlSelector" onAction="#selectXmlFile"  text="Open .xml"  minWidth="100.0" />
    </HBox>

    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
        <Label fx:id="msgLabel" />
    </HBox>


    <TableView fx:id="tableView" GridPane.columnIndex="0"  GridPane.rowIndex="2" GridPane.columnSpan="2">
    </TableView>


    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Button fx:id="butBack"  onAction="#moveBack" minWidth="100.0" text="Back" />
        <Button fx:id="butNext"  onAction="#moveNext" minWidth="100.0" text="Next" />
    </HBox>

    <Label fx:id="viewingLabel" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>