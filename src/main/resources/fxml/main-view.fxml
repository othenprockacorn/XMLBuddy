<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TableView?>


<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane fx:controller="com.acorn.xmlsnap.controller.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" >

    <padding><Insets top="20" right="25" bottom="20" left="25"/></padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="100.0" prefWidth="90.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="100.0" prefWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="20.0"  vgrow="SOMETIMES"/>
        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" valignment="BOTTOM" />
        <RowConstraints minHeight="100.0"  percentHeight="85" vgrow="SOMETIMES" />
        <RowConstraints minHeight="20.0"  vgrow="SOMETIMES" />

    </rowConstraints>


    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <TextField fx:id="tfMainNode"  promptText="Enter root node"  minWidth="300.0" text="bookstore"/>
        <Button fx:id="butXmlSelector" onAction="#selectXmlFile"  text="Open .xml"  minWidth="100.0" />
        <Label fx:id="msgLabel" />
    </HBox>

    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
        <Label text="Filter:" minWidth="30.0" />
        <ComboBox fx:id="cbFilterType" value="AND"  minWidth="80.0" >
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="AND"/>
                    <String fx:value="OR"/>
                </FXCollections>
            </items>
        </ComboBox>
        <TextField fx:id="tfFilter"  promptText="A filter is a node=value. Combine multiple filters using a comma"  minWidth="300.0" prefWidth="600.0"/>
    </HBox>


    <TableView fx:id="tableView" GridPane.columnIndex="0"  GridPane.rowIndex="2" GridPane.columnSpan="2">
    </TableView>


    <HBox spacing="10.0" VBox.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Button fx:id="butBack"  onAction="#moveBack" minWidth="100.0" text="Back" />
        <Button fx:id="butNext"  onAction="#moveNext" minWidth="100.0" text="Next" />
    </HBox>

    <Label fx:id="viewingLabel"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>